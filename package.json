{
    "name": "type-hierarchy-extension",
    "displayName": "Type Hierarchy Extension",
    "description": "Enhanced Type Hierarchy viewer for C++ using VS Code's language features",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:cpp"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "classHierarchy",
                    "name": "Class Hierarchy"
                },
                {
                    "id": "classHierarchyText",
                    "name": "Class Hierarchy Tree"
                }
            ]
        },
        "commands": [
            {
                "command": "classHierarchy.showHierarchy",
                "title": "Show Class Hierarchy"
            },
            {
                "command": "classHierarchy.showHierarchySupertypes",
                "title": "Show Class Hierarchy - Supertypes"
            },
            {
                "command": "classHierarchy.showHierarchySubtypes",
                "title": "Show Class Hierarchy - Subtypes"
            },
            {
                "command": "classHierarchy.showSequenceDiagram",
                "title": "Show Sequence Diagram"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "@clangd/vscode-clangd": "^0.0.0",
        "vscode-languageclient": "^9.0.1"
    }
}