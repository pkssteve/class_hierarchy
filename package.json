{
    "name": "cpp-type-hierarchy-extension",
    "displayName": "C++ class hierarchy explorer",
    "description": "Show base and derived classes in the diagram. The underlying functionality for getting class hierarchy depends on the clangd extension.",
    "version": "0.6.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Visualization"
    ],
    "activationEvents": [
        "onLanguage:cpp"
    ],
    "publisher": "Steve Park",
    "repository": {
        "type": "git",
        "url": "https://github.com/pkssteve/vscode-classGraph.git"
    },
    "license": "MIT",
    "main": "./dist/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "classHierarchy",
                    "name": "Class Hierarchy"
                }
            ]
        },
        "commands": [
            {
                "command": "classHierarchy.showHierarchy",
                "title": "Show Class Hierarchy"
            },
            {
                "command": "classHierarchy.showHierarchySupertypes",
                "title": "Show Class Hierarchy - Supertypes"
            },
            {
                "command": "classHierarchy.showHierarchySubtypes",
                "title": "Show Class Hierarchy - Subtypes"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.0.0",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "@clangd/vscode-clangd": "^0.0.0",
        "vscode-languageclient": "^9.0.1"
    }
}